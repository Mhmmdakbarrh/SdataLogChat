#include <iostream>
#include <string>
using namespace std;

/* ===== STRUCT NODE CHAT ===== */
struct ChatNode {
    string pengirim;
    string pesan;
    ChatNode* next;
};

ChatNode* head = NULL;

/* ===== TAMBAH PESAN ===== */
void kirimPesan(string pengirim, string pesan) {
    ChatNode* baru = new ChatNode;
    baru->pengirim = pengirim;
    baru->pesan = pesan;
    baru->next = NULL;

    if (head == NULL) {
        head = baru;
    } else {
        ChatNode* temp = head;
        while (temp->next != NULL) {
            temp = temp->next;
        }
        temp->next = baru;
    }
}

/* ===== TAMPIL LOG PESAN ===== */
void tampilLogPesan() {
    ChatNode* temp = head;
    cout << "\n=== LOG CHAT ===\n";

    if (temp == NULL) {
        cout << "Belum ada pesan.\n";
        return;
    }

    while (temp != NULL) {
        cout << temp->pengirim << ": " << temp->pesan << endl;
        temp = temp->next;
    }
}

/* ===== MENU UTAMA ===== */
int main() {
    int pilihan;
    string nama, pesan;

    do {
        cout << "\n===== MENU CHAT =====\n";
        cout << "1. Kirim Pesan\n";
        cout << "2. Lihat Log Pesan\n";
        cout << "0. Keluar\n";
        cout << "Pilih: ";
        cin >> pilihan;
        cin.ignore();

        switch (pilihan) {
        case 1:
            cout << "Nama Pengirim: ";
            getline(cin, nama);
            cout << "Isi Pesan: ";
            getline(cin, pesan);
            kirimPesan(nama, pesan);
            break;

        case 2:
            tampilLogPesan();
            break;

        case 0:
            cout << "Keluar dari program.\n";
            break;

        default:
            cout << "Pilihan tidak valid!\n";
        }
    } while (pilihan != 0);

    return 0;
}